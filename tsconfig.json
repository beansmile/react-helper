{
  "compilerOptions": {
    "module": "es6",
    "moduleResolution": "node",
    "target": "esnext",
    "sourceMap": false,
    "declaration": true,
    "outDir": "dist",
    "jsx": "preserve",
    "experimentalDecorators": true,
    "lib": [
      "es2016",
      "es6",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
